{
  "name": "bros-desktop",
  "private": true,
  "version": "0.1.0",
  "main": "dist/main.js",
  "scripts": {
    "dev": "vite --config src/renderer/vite.config.ts",
    "electron:dev": "cross-env NODE_ENV=development electron ./dist/main.js",
    "electron:prod": "cross-env NODE_ENV=production electron ./dist/main.js",
    "build:main": "tsc -p tsconfig.json --outDir dist",
    "build:main:watch": "tsc -p tsconfig.json --outDir dist --watch",
    "build": "pnpm build:main && electron-builder",
    "clean": "rimraf dist release",
    "postinstall": "node node_modules/electron/install.js"
  },
  "build": {
    "appId": "com.bros.desktop",
    "productName": "BROS Desktop",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "!dist/linux-unpacked{,/**}"
    ]
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "@bros/runner": "workspace:^",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
