{
  "name": "bros-desktop",
  "private": true,
  "version": "0.1.0",
  "main": "dist/main.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.json --outDir dist",
    "build:preload": "tsc src/preload.ts --outDir dist",
    "build": "pnpm build:main && pnpm build:preload && electron-builder",
    "dev:renderer": "vite --config src/renderer/vite.config.ts",
    "dev:electron": "cross-env NODE_ENV=development pnpm build:main && pnpm build:preload && electron ./dist/main.js",
    "dev": "concurrently -n renderer,electron -c blue,green \"pnpm dev:renderer\" \"pnpm dev:electron\""
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron": "^38.1.2",
    "express": "^5.1.0",
    "keytar": "^7.9.0",
    "node-fetch": "^2.7.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.7"
  }
}
